<%- include('../partials/header') %>

<section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Flight Number </div>
  <div><%= flight.flightNo %></div>
  <div>Departure Date</div>
  <div><%= flight.departs.toDateString() %></div>
</section>

<br><br>
<h2>Arrivals</h2>
<form id="add-destination-form" method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <label>Destination:</label>
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <option value="SEA" selected>SEA</option>
    </select>
  </label><br>
  <label>Arrival Date:</label>
  <input type="datetime-local" name="arrival">
  <input type="submit" value="Add Destination">
</form>

<% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr></tr>
        <th>Destination</th>
        <th>Arrival Date</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(d) { %>
        <tr>
          <td><%= d.airport %></td>
          <td><%= d.arrival.toDateString() %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
    <h5>No Arrivals</h5>
  <% } %>

<div>
  <h2>Tickets:</h2>
  <a href="/flights/<%= flight._id %>/tickets/new">Add a Ticket</a>
</div>

<% if (tickets.length) { %>
  <table>
    <thead>
      <tr></tr>
        <th>Seat Number</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% tickets.forEach(function(f) { %>
        <tr>
          <td><%= f.seat %></td>
          <td>$<%= f.price %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
    <h5>No Tickets Booked</h5>
  <% } %>


<%- include('../partials/footer') %>